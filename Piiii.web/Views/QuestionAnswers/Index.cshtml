@model PagedList.IPagedList<Piiii.domain.quiz>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout1.cshtml";
}




<div class="colorlib-work">
    <div class="container">
        <h2>Certification catalog</h2>
        @using (Html.BeginForm())
        {
            <div class="row animate-box">
                <div class="col-md-6 col-md-offset-3">
                    <div class="row">
                        <div class="col-md-12">
                            <iframe width="560"
                                    height="315"
                                    src="https://www.youtube.com/embed/wCntbwSwoiI"
                                    frameborder="0"
                                    allowfullscreen>

                            </iframe>

                            <form class="form-inline qbstp-header-subscribe">
                                <div class="col-three-forth">
                                    <div class="form-group">
                                        <div>
                                            @Html.TextBox("filtre", "Search by name", new { @class = "form-control" })

                                        </div>

                                    </div>
                                </div>
                                <div class="col-one-third">
                                    <div class="form-group">
                                        <button type="submit" id="submit" class="btn btn-primary">Search Now</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        }

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 animate-box">
                        <div class="work-grid">
                            
                            <div class="desc">
                                <h2><a href="#"> @Html.DisplayFor(modelItem => item.QuizName)</a></h2>
                                <p>Catalog :@Html.DisplayFor(modelItem => item.formation1.catalog.nom_cat)</p>
                                <p>Descrition :  @Html.DisplayFor(modelItem => item.formation1.description)</p>
                                <p>prerequis : @Html.DisplayFor(modelItem => item.formation1.prerequis)</p>
                                @Html.ActionLink("Pass", "loadQuiz", new { id = item.id_Quiz }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id_Quiz })
                            </div>
                        </div>
                    </div>
                    
                }
            </div>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>